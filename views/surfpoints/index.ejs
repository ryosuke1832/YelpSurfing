<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>

<h1>サーフポイント一覧</h1>

<% for(let surfpoint of surfpoints) { %>
<div class="card md-3">
  <div class="row">
    <div class="col-md-4">
      <% if (surfpoint.images && surfpoint.images.length > 0) { %>
      <img
        class="img-fluid img-thumbnail"
        src="<%= surfpoint.images[0].url %>"
        alt=""
      />
      <% } else { %>
      <img
        class="img-fluid img-thumbnail"
        src="/images/sample.png"
        alt="Default Image"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= surfpoint.title %></h5>
        <p class="card-text"><%= surfpoint.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= surfpoint.location %></small>
        </p>
        <a class="btn btn-primary" href="/surfpoints/<%= surfpoint._id %>"
          ><%= surfpoint.title %>の詳細</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%= process.env.MAPBOX_TOKEN %>";
  const surfpoints = <%- JSON.stringify(surfpoints) %>;
</script>

<script src="/javascripts/clusterMap.js"></script>
